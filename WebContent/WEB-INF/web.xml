<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
        <welcome-file-list>
         <welcome-file>RegisterLogin.jsp</welcome-file>
         </welcome-file-list> 
	<servlet>
	  <servlet-name>register</servlet-name>
	  <servlet-class>com.customer.cusReg</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>register</servlet-name>
	<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>login</servlet-name>
	  <servlet-class>com.customer.loginservlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/log</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>logout</servlet-name>
	  <servlet-class>com.customer.logoutservlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>logout</servlet-name>
	<url-pattern>/logo</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>updatecus</servlet-name>
	<servlet-class>com.customer.cusupdateservlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>updatecus</servlet-name>
	<url-pattern>/update</url-pattern>
	</servlet-mapping>
    
    <servlet>
    <servlet-name>deletecus</servlet-name>
    <servlet-class>com.customer.deleteservlet</servlet-class>
   </servlet>
   <servlet-mapping>
   <servlet-name>deletecus</servlet-name>
   <url-pattern>/delete</url-pattern>
   </servlet-mapping>

</web-app>